/* pages/detail/detail.wxss */
.container {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
}

.header {
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.header-img {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}

.header-info {
  font-size: 28rpx;
  color: #71777D;
  padding: 20rpx 0;
  width: 100%;
  border-bottom: 1rpx solid rgba(224, 64, 64, 0.658);
}

.info-level {
  margin: 0 20rpx;
}

.desc {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 40rpx 30rpx;
}

.desc-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.desc-content {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #2B333B;
}

.divide {
  width: 100%;
  height: 20rpx;
  background-color: #f0f0f0;
}

.eval {
  box-sizing: border-box;
  padding: 30rpx 40rpx 30rpx;
}

.eval-title {
  font-weight: bold;
  margin-bottom: 40rpx;
}

.eval-title-number {
  font-weight: normal;
  font-size: 24rpx;
  color: #71777D;
}

.eval-item {
  width: 100%;
  margin-bottom: 50rpx;
}

.item-user {
  width: 100%;
  height: 80rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.user-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
}

.user-time {
  font-size: 24rpx;
  font-weight: normal;
  color: #71777D;
}

.user-stars {
  color: orange;
  letter-spacing: 8rpx;
}

.user-name {
  flex: 1;
}

.item-text {
  font-size: 32rpx;
}

.bar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  box-shadow: 0 -1px 1px 0 #F1F1F1;
}

.price {
  font-size: 40rpx;
  font-weight: bold;
  color: red;
}

.cart {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: #ffffff;
  background-image: linear-gradient(180deg,#fd5c33 0,#f12e2e 100%);
  border-radius: 40rpx;
}