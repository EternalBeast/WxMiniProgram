.container {
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
  padding: 20rpx 40rpx 80rpx;
}

.list-item {
  width: 100%;
  height: 152rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.item-label {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.item-img {
  width: 208rpx;
  height: 136rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.item-title {
  font-size: 32rpx;
  flex: 1;
  /* 多行文字省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal !important;
  word-wrap: break-word;
}

.item-price {
  flex-shrink: 0;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.empty {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  color: #71777D;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bar {
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.2);
}

.total-price {
  flex: 1;
  font-size: 36rpx;
  color: red;
  font-weight: bold;
}

.delete {
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
}

.buy {
  height: 60rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  background-image: linear-gradient(180deg,#fd5c33 0,#f12e2e 100%);
  border-radius: 40rpx;
}