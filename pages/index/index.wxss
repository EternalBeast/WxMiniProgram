/**index.wxss**/
.header {
  position: relative;
}

.header-input {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 36rpx;
  margin: 22rpx 34rpx 8rpx;
  border: 1rpx solid #D9DDE1;
  border-radius: 36rpx;
  font-size: 26rpx;
  text-align: center;
}

.header-input-placeholder {
  color: rgba(133,133,133,0.60);
}

.header-input-icon {
  position: absolute;
  left: 170rpx;
  top: 18rpx;
  color: rgba(133,133,133,0.60);
}

.nav {
  display: flex;
  margin: 0 24rpx 6rpx;
  height: 112rpx;
  line-height: 112rpx;
}

.nav-item {
  position: relative;
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #2B333B;
  font-weight: bold;
}

.nav-item-img {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}

.nav-active {
  position: absolute;
  left: 72rpx;
  bottom: 16rpx;
  width: 32rpx;
  height: 8rpx;
  border-radius: 4rpx;
}

.nav-active-recommend {
  background-color: #F01414;
}

.nav-active-project {
  background-color: #D48E05;
}

.nav-active-path {
  background-color: #9447EB;
}

.nav-active-activity {
  background-color: #FF5FE4;
}

.swiper {
  height: 232rpx;
}

.swiper-item {
  box-sizing: border-box;
  padding: 0 6rpx;
}

.swiper-img {
  width: 702rpx;
  height: 232rpx;
  border-radius: 12rpx;
}

.project {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  padding: 0 24rpx;
  margin-top: 32rpx;
}

.project-title {
  font-size: 28rpx;
  line-height: 32rpx;
  font-weight: bold;
  color: #2B333B;
  margin-left: 16rpx;
  margin-bottom: 20rpx;
}

.project-more {
  position: absolute;
  font-size: 28rpx;
  line-height: 32rpx;
  font-weight: bold;
  color: #71777D;
  right: 30rpx;
  top: 0;
}

.project-empty {
  margin-top: 20rpx;
  font-size: 24rpx;
  width: 100%;
  text-align: center;
}

.project-item {
  display: flex;
  width: 100%;
  height: 152rpx;
  margin-bottom: 16rpx;
}

.project-img {
  width: 208rpx;
  height: 136rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.project-content {
  flex: 1;
  border-bottom: 1rpx solid #D9DDE1;
}

.project-item-title {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #2B333B;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.project-item-tags {
  font-size: 24rpx;
  line-height: 32rpx;
  color: #71777D;
}

.project-item-tags view {
  display: inline-block;
}

.project-item-price {
  margin-right: 20rpx;
}

.project-item-price-active {
  color: #F01414;
  margin-right: 9.6rpx;
}

.project-item-notice {
  box-sizing: border-box;
  height: 32rpx;
  font-size: 20rpx;
  line-height: 32rpx;
  color: #F20D0D;
  background-color: rgba(242,13,13,0.10);
  border-radius: 4rpx;
  padding: 0 8rpx;
  margin-right: 24rpx;
}

.project-item-level {
  margin-right: 24rpx;
}

.project-item-icon {
  position: relative;
  top: -2rpx;
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}

.activity-item {
  box-sizing: border-box;
  width: 100%;
  height: 280rpx;
  padding: 0 24rpx;
  margin-bottom: 32rpx;
}

.activity-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}